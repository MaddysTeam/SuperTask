@model OperationViewModel

<link href="~/assets/plugins/select2-4.0.2/css/select2.min.css" rel="stylesheet" />
<style>
	.dropzonePop {
		display: none;
	}
</style>


<div class="modal-dialog" style="width:95%;">

	<div class="row">

		<!-- widget -->
		<div class="widget details col-md-7 col-md-offset-1">

			<form id="requireForm" class="form-horizontal" action="@Url.Action("Review","Require")" role="form" data-after-success="afterDialogSuccess()" style="">

				<div class="widget-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
						<h4>需求评审</h4>
					</div>


					<div class="modal-body  row editTaskInfo">
						<fieldset class="col-sm-12">

							@Html.HiddenFor(t => t.ProjectId)
							@Html.HiddenFor(t => t.Id)

							<div class="form-group">
								@Html.Label("需求ID", new { @class = "control-label col-md-2" })
								<div class="col-md-9">
									@Html.Label("", Model.SortId.ToString(), new { @class = "form-control" })
								</div>
							</div>

							<div class="form-group">
								@Html.Label("需求名称", new { @class = "control-label col-md-2" })
								<div class="col-md-9">
									@Html.Label("", Model.Name, new { @class = "form-control" })
								</div>
							</div>


							<div class="form-group">
								@Html.Label("评审结果", new { @class = "control-label col-md-2" })
								<div class="col-md-9">
									@Html.DropDownListFor(t => t.Result,
									DictionaryCache.Cached(RequireKeys.ReviewResultGuid)
													.GetSelectListById(Guid.Empty),
									new { @class = "form-control" })
								</div>
							</div>

							<div class="form-group">
								@Html.Label("备注", new { @class = "control-label col-md-2" })
								<div class="col-md-9">
									@Html.TextAreaFor(t => t.Remark, 12, 2, new { @class = "form-control" })
								</div>
							</div>


							<div class="input-group center-block">
								<button id="submit" class="btn btn-info col-md-3 col-md-offset-2 btn-custom-primary">评审</button>
								<a class="btn btn-info col-md-3" data-dismiss="modal">取消</a>
							</div>

						</fieldset>

					</div>

				</div>

			</form>

		</div>


	</div>
</div>


<script src="~/assets/plugins/ckeditor_4.14.1_standard/ckeditor/ckeditor.js"></script>

<script>

	$(function () {

		ajaxSubmitForm($('#requireForm'), true);

		myEditor = initCKEditor('Remark');

		$('#submit').click(function () {
			$('#Remark').val(myEditor.getData());
		});

	});


	function afterDialogSuccess() {
		$('#firstModal').modal('hide');
		$('#bootgrid').bootgrid('reload');
	}



</script>

