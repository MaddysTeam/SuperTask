@model EvalBuilderViewModel
@foreach (var item in Model.Indications)
{
	<div class="alert alert-info">
		<div class="row itemTitle">
			<div class="col-sm-10">
				<i class="fa fa-star"></i>		@item.IndicationName
			</div>
			<div class="important  subItem">分值：<label class="fullScore">0</label></div>
		</div>
		<div class="row subItem">
			<div class="col-sm-2 important">设置分值:</div>
			<div class="col-sm-4"><input placeholder="输入分值"  class="score form-control"  /></div>
		</div>
		<hr class="subItem" />
		@foreach (var role in Model.EvalTable.AccessorRoles)
		{
			<div class="row subItem">
				<div class="col-sm-2">@(role.RoleName)(权重%):</div>
				<div class="col-sm-4"><input placeholder="输入权重" class="weight form-control"/></div>
				<input type="hidden" class="roleId" value="@role.RoleId" />
			</div>
		}
		<div class="text-right subItem">
			<button  class="btn btn-success btn-ok">确定</button>
			<button  class="btn btn-info btn-modify hidden">修改</button>
		</div>
		<input type="hidden" class="indicationId" value="@item.IndicationId" />
		<input type="hidden" class="evalType" value="@item.IndicationType" />

	</div>
}
