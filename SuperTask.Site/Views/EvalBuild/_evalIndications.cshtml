@model EvalBuilderViewModel
@foreach (var item in Model.EvalIndications)
{
	<div class="alert alert-info">
		<div class="row itemTitle">
			<div class="col-sm-10">
				<i class="fa fa-star"></i>	@item.IndicationName
			</div>
			<div class="important  subItem">分值：<label class="fullScore">@item.FullScore</label></div>
		</div>
		<div class="row subItem">
			<div class="col-sm-2 important">设置分值:</div>
			<div class="col-sm-4"><input placeholder="输入分值" class="score form-control" id="Score" value="@item.FullScore" readonly /></div>
		</div>
		<hr class="subItem" />

		@if (!Model.EvalTable.IsBuildDone)
		{
		<div class="text-right subItem">
			<button  class="btn btn-success btn-ok hidden" >确定</button>
			<button  class="btn btn-info btn-modify ">修改</button>
		</div>
		}
		<input type="hidden" id="EvalIndicationId"  value="@item.Id" />
		<input type="hidden" id="IndicationId" value="@item.IndicationId" />
		<input type="hidden" id="IndicationType" value="@item.IndicationType" />
		<input type="hidden" id="EvalType" value="@Model.EvalTable.TableType" />
	</div>
}