
@{
	var pageTitle = ViewBag.Title = "我的流程";
	Layout = "~/Views/Shared/_Layout.cshtml";

	var taskId = Request["taskId"] == null ? Guid.Empty.ToString() : Request["taskId"];
}

<div class="content-wrapper">

	@*<div class="main-header">
			<h3><i class="fa fa-check-square-o"></i> @pageTitle</h3>
			<em></em>
		</div>*@
	<div class="main-content">

		<!-- widget -->
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
			</div>
			<div class="widget-content">

				<div class="row">
					<div class="form-horizontal">

						<div class="col-sm-4">
							<div class="form-group">
								<label class="col-md-6 control-label">查询类型</label>
								<div class="col-md-6">

									<select id="SearchType" class="form-control">
										<option value="@ReviewKeys.ResultWait" selected="selected">未办</option>
										<option value="@ReviewKeys.ResultFailed">退回</option>
										<option value="@ReviewKeys.ResultSuccess">同意</option>
									</select>

								</div>
							</div>
						</div>

					</div>
				</div>
				<!-- Grid -->
				<div class="table-responsive">
					<table id="bootgrid" class="table table-striped table-hover table-dark-header">
						<thead>
							<tr>
								<th data-column-id="projectName">项目名称</th>
								<th data-column-id="taskName">任务名称</th>
								<th data-column-id="taskTypeName">类型</th>
								<th data-column-id="sender">申请者</th>
								<th data-column-id="receiver">审核者</th>
								<th data-column-id="comment">原因（或批注）</th>
								<th data-column-id="sendDate" data-formatter="DateOnly">提交日期</th>
								<th data-column-id="reviewDate">审核日期</th>
								<th data-column-id="commands" data-formatter="commands" data-sortable="false" data-header-Css-Class="width130">操作</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
			<!-- /widget content -->
		</div>
		<!-- /widget -->

	</div>
</div>
<input type="hidden" id="taskId" value="@taskId" />

@section Modals{
	<button class="btn btn-md btn-custom-primary hidden" id="modelProxy" data-toggle="ajax-modal" data-target="#firstModal">代理</button>
	<!-- Modal start -->
	<div class="modal" id="firstModal" tabindex="-1" role="dialog" aria-labelledby="firstModalLabel" aria-hidden="true">
	</div>
	<!-- Modal end -->
}
@section Scripts {
	<script>
		function getGlobalRequest() {
			return {
				taskId: $('#taskId').val(),
				searchType: $('#SearchType').val()
			};
		}

		function getGridOptions() {
			return $.extend(true, {}, gridOptions, {

				url: window.location.href,

				requestHandler: function (request) { return $.extend(true, request, getGlobalRequest()); },

				formatters: {
					'commands': function (column, row) {
						var id = row.id;
						var reviewTypeId = row.reviewTypeId;
						var isStoneType = row.taskTypeId == '@TaskKeys.NodeTaskType';
						var url = !isStoneType ? '@Url.Action("WorkTaskReviewAction", "Review")?id=' + row.taskId : '@Url.Action("StoneTaskReviewAction", "Review")?id=' + row.taskId;
						

						if (row.result == '@ReviewKeys.ResultWait' && row.receiverId == '@Html.GetUserProfile().UserId')
							if (row.attachmentUrl) {
								var previewUrl = '@Url.Action("Preview", "Attachment")?url=' + row.attachmentUrl;
								return "<div class='btn-group btn-group-xs pull-right'>" +
														 "<button class='btn btn-lg btn-success btn-detail' data-url='" + url + "'>审核</button>" +
														 "<a class='btn btn-warning' href='" + row.attachmentUrl + "'>附件下载</a>" +
														 "<a class='btn btn-info btn-preview' data-url='" + previewUrl + "'>附件预览</a>" +
														 "</div>";
							}
							else {
								return "<div class='btn-group btn-group-xs pull-right'>" +
													 "<button class='btn btn-lg btn-success btn-detail' data-url='" + url + "'>审核</button>" +
													 "</div>";
							}
					},
				},
			});
		}

		$(function () {

			var grid = $('#bootgrid');
			grid.bootgrid(getGridOptions())
			.on('loaded.rs.jquery.bootgrid', function () {
				var manUrl = '@Url.Action("FlowIndex", "WorkFlowRun")';

				grid.find('.btn-detail').on('click', function (e) {
					var url = $(this).data('url');
					$('#modelProxy')
						.data('url', url)
						.trigger('click');
				});

				grid.find('.btn-preview').on('click', function () {
					var url = $(this).data('url');
					$('#modelProxy')
						.data('url', url)
						.trigger('click');
				});
			});

			$('#SearchType').on('change', function () {
				$('#bootgrid').bootgrid('reload');
			});

		});
	</script>
}