@model Review

<div class="modal-dialog">

	<!-- widget -->
	<div class="widget">
		<div class="widget-header">
			<h3><i class="fa fa-edit"></i> 提交审核</h3>
			<div class="btn-group widget-header-toolbar">
				<a href="#" title="关闭" class="btn-borderless" data-dismiss="modal"><i class="fa fa-close"></i></a>
			</div>
		</div>
		<div class="widget-content">
			<form action="@Url.Action("UploadFile", "Attachment")" class="dropzone file"></form>
			<form class="form-horizontal" action="@Url.Action("StoneTaskReviewRequest", "Review")" method="post" role="form" data-after-success="afterDialogSuccess()">
				<div class="row">
					<fieldset class="col-sm-12">
						@Html.HiddenFor(r => r.ReviewId)
						@Html.HiddenFor(r => r.SenderID)
						@Html.HiddenFor(r => r.ReceiverID)
						@Html.HiddenFor(r => r.TaskId)
						@Html.HiddenFor(r => r.ProjectId)
						@Html.HiddenFor(r => r.Title)
						@Html.HiddenFor(r => r.Result)
						@Html.HiddenFor(r => r.ReviewType)
						<div class="form-group">
							@Html.LabelFor(r => r.Title, new { @class = "control-label col-md-3" })
							<div class="col-md-9">
								@Html.Label("Title", Model.Title, new { @class = "form-control" })
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(r => r.ProjectName, new { @class = "control-label col-md-3" })
							<div class="col-md-9">
								@Html.Label("PName", Model.ProjectName, new { @class = "form-control" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(r => r.TaskName, new { @class = "control-label col-md-3" })
							<div class="col-md-9">
								@Html.Label("TName", Model.TaskName, new { @class = "form-control" })
							</div>
						</div>

						<div class="form-group">
							@Html.Label("comment", "输入原因或批注(200字以内)：", new { @class = "control-label col-md-3" })
							<div class="col-md-9">
								@Html.TextAreaFor(r => r.Comment, 10, 4, new { @class = "form-control" })
							</div>
						</div>

						<div class="form-group">
							@Html.HiddenFor(r => r.AttachmentUrl, new { @class = "attachmentUrl" })
							<label class="col-md-3 control-label">上传文件</label>
							<div class="col-md-9">
								<input style="visibility:hidden;position:absolute;" />
								<div class="input-group">
									<label id="uploadName" class="form-control oversize uploadName"></label>
									<span class="input-group-btn">
										<button class="btn btn-danger" type="button" id="btn-upload">附件上传</button>
									</span>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="col-sm-9 col-lg-offset-3">
								<button type="submit" class="btn btn-primary btn-block-half"><i class="fa fa-check-circle"></i> 提交申请</button>
								<button type="button" class="btn btn-default btn-block-half" data-dismiss="modal">取消</button>
							</div>
						</div>
					</fieldset>
				</div>
			</form>

		</div>
	</div>
	<!-- end widget -->
</div>
<script src="~/assets/plugins/dropzone-4.3.0/js/dropzone.min.js"></script>
<script>

	$(function () {

		ajaxSubmitForm($('.modal-dialog form'));

		//文件上传
		$('.dropzone.file').dropzone({
			addedContainer: '#flyArea',
			dictResponseError: '上传出错',
			uploadMultiple: false,
			maxFilesize: 200,
			init: function () {
				this.on('success', function (file, data) {
					$('.attachmentUrl').val(data.url);
					setTimeout(function () { $('#uploadName').html(data.filename); }, 1000);

					$.post('@Url.Action("SaveFile", "ProjectStoneTask")',
					{
						projectId: '@Model.ProjectId',
						taskId: '@Model.TaskId',
						fileName: data.filename,
						filePath: data.url,
						fileExt: data.ext
					}, function () {

					});
				});
				this.on('error', function (file, message) {
					popupMessage({ result: 'error', msg: message });
				});
			}
		});

		// proxy click event to dropzone.
		$('#btn-upload').on('click', function () {
			$('.dropzone.file').trigger('click');
		});

	})

	function afterDialogSuccess() {
		$('#firstModal').modal('hide');
		$('#bootgrid').bootgrid('reload');
	}

</script>