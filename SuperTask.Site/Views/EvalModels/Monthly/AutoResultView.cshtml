@model List<EvalResultItem>
@{
	//var evalIndications = new List<EvalIndication>();
}


		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th 	style="width:150px">考核指标</th>
					<th style="width:150px">指标说明</th>
					<th  style="width:50px">指标满分</th>
					<th  style="width:100px">得分</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach (var item in Model)
					{
						if (item != null && item.EvalIndication != null)
						{
						<tr class="evalItem">
							<td style="width:150px">
								@item.EvalIndication.IndicationName
							</td>
							<td style="width:150px">@item.EvalIndication.IndicationDescription</td>
							<td style="width:50px"><input name="fullScore" class="form-control fullScore" value="@item.EvalIndication.FullScore" readonly/></td>
							<td style="width:100px"><input name="realScore" id="hint" type="text" class="form-control score" value="@item.Score.ToString("0.00")" readonly /></td>
							
						</tr>
						}
						else
						{
							<tr>
								<td>
									<strong>您所属的角色无法查看考核结果！</strong>
								</td>
							</tr>
						}
					}
				}

			</tbody>
		</table>



