				<!-- Grid -->
				<div class="table-responsive">
					<table id="bootgrid" class="table table-striped table-hover table-dark-header">
						<thead>
							<tr>
								<th data-column-id="MemberName">考核对象</th>
								<th data-column-id="PeriodNames">当前考核周期</th>
								<th data-column-id="AccessorName">考评者</th>
								<th data-column-id="EvalStatus">考评状态</th>
								<th data-column-id="Score">得分</th>
								<th data-column-id="commands" data-formatter="commands" data-sortable="false" data-header-Css-Class="width160">操作</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
			<!-- /widget content -->
		</div>
		<!-- /widget -->

	</div>
</div>

@section Scripts{
	<script>
		function getGlobalRequest() {
			return {
				evalType: '@EvalTableKeys.SubjectType'
			};
		}

		function getGridOptions() {
			return $.extend(true, {}, gridOptions, {

				url: window.location.href,

				requestHandler: function (request) { return $.extend(true, request, getGlobalRequest()); },

				formatters: {
					'commands': function (column, row) {
						var id = row.id;
						var targetId = row.MemberId;
						var isEvaled = row.IsEvaled;
						var evalbutton = '<div class="btn-group btn-group-xs pull-right"  data-target-id="' + targetId + '" data-row-active="' + row.actived + '">';
						if (!isEvaled)
						  evalbutton += '<button class="btn btn-lg btn-success btn-eval">考核</button>';
						else
							return evalbutton += '<button class="btn btn-lg btn-info btn-eval">继续考核</button>';
						return evalbutton += '</div>';
					},
				},
			});
		}

		$(function () {

			$('#bootgrid').bootgrid(getGridOptions()).on('loaded.rs.jquery.bootgrid', function () {
				var evalUrl = '@Url.Action("SubjectEvalView", "EvalManage")';
				$(this).find('.btn-eval').on('click', function (e) {
					var targetId = $(this).parent().data('targetId');
					location.href = evalUrl + '?targetId=' + targetId 
				});

				var evalResultUrl = '@Url.Action("SubjectEvalResult", "EvalManage")';

			});

			var door = false;
			$('.dp-accessorRoles').change(function () {
				if (door)
					$('#bootgrid').bootgrid('reload');
				else
					door = true;
			});

			$('.dp-accessorRoles').change();

		});
	</script>

}