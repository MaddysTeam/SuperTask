@model FileViewModel
<div class="modal-dialog modal-lg">

	<!-- widget -->
	<div class="widget">
		<div class="widget-header">
			<h3><i class="fa fa-edit"></i>预览</h3>
			<div class="btn-group widget-header-toolbar">
				<a href="#" title="关闭" class="btn-borderless" data-dismiss="modal"><i class="fa fa-close"></i></a>
			</div>
		</div>
		<div class="widget-content preview" id="previewContainer">


		</div>
	</div>
	<!-- end widget -->
</div>
<script>

	$(function () {

		var $previewContainer = $('#previewContainer');
		var extName = '@Model.fileExtName';
		var name = '@Model.name';
		var path = '@Model.path';

		//if file is image type , show image preview area
		var imageSuffix = '@AttahmentKeys.ImageSuffix';
		if (imageSuffix.indexOf(extName) >= 0) {
			$previewContainer.append('<img src="' + path + '" style="height:100%; width:100%"></img>');
			return true;
		}

		var documentSuffix = '@AttahmentKeys.documentSuffix';
		if (documentSuffix.indexOf(extName) >= 0) {
			PDFObject.embed(path, '#previewContainer', { width: "100%", height: "600px" });
		}

	})

</script>
